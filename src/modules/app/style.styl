.app
	height 100vh
	width 100vw
	background-color white

	&-header
		display grid
		grid-template-areas 'logo navigation'\
												'bottom .'
		grid-template-columns 178px auto
		grid-template-rows auto 175px
		height 100vh
		width 100vw
		overflow hidden

		&-logo
			grid-area logo

		&-bottom
			grid-area bottom

		&-navigation
			position relative
			grid-area navigation
			height 100%

			& ul
				position relative
				z-index 2
				display grid
				grid-template-columns repeat(auto-fit, 100px) 2%
				height 60px
				justify-content flex-end
				align-items center

				& li
					display flex
					justify-content center

					a
						font-family 'Ubuntu', sans-serif
						font-weight 700
						text-decoration none
						color white
						font-size 16px
						padding-left 5px
						padding-right 5px
						padding-top 5px
						padding-bottom 7px
						transition 300ms ease
						text-shadow 2px 2px 6px rgba(0, 0, 0, 0.2)

						&:hover
							box-shadow inset 0 -2.5px 0 0 white

			&::after
				content ''
				position absolute
				right 0
				top 0
				min-height 232px
				max-height 100%
				min-width 632px
				height 100%
				max-width 1024px
				background url('../../assets/svg/top.svg')
				background-repeat no-repeat
				background-size contain