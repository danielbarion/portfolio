.app
	height 100vh
	width 100vw
	background-color white

	&-header
		overflow hidden

		&-text
			display flex
			justify-content center
			align-items center
			flex-direction column
			color white
			z-index $base_index + 1
			position absolute
			height auto
			width auto
			left calc(50% - 300px)
			top calc(50% - 40px)
			pointer-events none

			+breakpoint-inv(mobileL)
				width 100vw
				left calc(50% - 50vw)

			&-title
				color white

			&-description
				padding-top 1rem
				max-width 600px

				+breakpoint-inv(mobileL)
					width 90vw
					left calc(50% - 90vw)

		&-logo
			grid-area logo

		&-bottom
			position absolute
			overflow hidden
			bottom 0
			left 0
			pointer-events none
			z-index $base_index

			+breakpoint-inv(mobileL)
				display none

		&-navigation
			position relative
			grid-area navigation

			&-background
				position absolute
				right 0
				top 0
				pointer-events none
				z-index $base_index

				+breakpoint-inv(mobileL)
					display none

				& svg
					width 42rem
					height auto

			& ul
				position relative
				z-index $base_index
				display grid
				grid-template-columns repeat(auto-fit, 100px) 2%
				height 60px
				justify-content flex-end
				align-items center

				+breakpoint-inv(mobileM)
					grid-template-columns repeat(auto-fit, 100px) 20%

				+breakpoint-inv(mobileS)
					padding-top 15px
					grid-template-columns repeat(auto-fit, 100px) 57%

				& li
					display flex
					justify-content center

					a
						font-family 'Ubuntu', sans-serif
						font-weight 700
						text-decoration none
						color white
						font-size 16px
						padding-left 5px
						padding-right 5px
						padding-top 5px
						padding-bottom 7px
						transition 300ms ease
						text-shadow 2px 2px 6px rgba(0, 0, 0, 0.2)

						+breakpoint-inv(mobileM)
							padding-left 2.5px
							padding-right 2.5px
							padding-top 7px

						&:hover
							box-shadow inset 0 -2.5px 0 0 white

	.transition-element
		width 100vw
		height 100vh
		background-color black
		position absolute
		z-index $transitionElement_index