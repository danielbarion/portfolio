.app
	height 100vh
	width 100vw
	background-color white

	&-header
		overflow hidden

		+breakpoint-inv(mobileL)
			grid-template-columns 0px auto

		&-text
			display flex
			justify-content center
			align-items center
			flex-direction column
			color white
			z-index 3
			position absolute
			height auto
			width auto
			left calc(50% - 300px)
			top calc(50% - 40px)
			pointer-events none

			&-title
				color white

			&-description
				padding-top 1rem
				max-width 600px

		&-logo
			grid-area logo

		&-bottom
			position absolute
			overflow hidden
			bottom 0
			left 0
			pointer-events none

		&-navigation
			position relative
			grid-area navigation

			&-background
				position absolute
				right 0
				top 0
				pointer-events none

				& svg
					width 42rem
					height auto

			& ul
				position relative
				z-index 2
				display grid
				grid-template-columns repeat(auto-fit, 100px) 2%
				height 60px
				justify-content flex-end
				align-items center

				& li
					display flex
					justify-content center

					a
						font-family 'Ubuntu', sans-serif
						font-weight 700
						text-decoration none
						color white
						font-size 16px
						padding-left 5px
						padding-right 5px
						padding-top 5px
						padding-bottom 7px
						transition 300ms ease
						text-shadow 2px 2px 6px rgba(0, 0, 0, 0.2)

						&:hover
							box-shadow inset 0 -2.5px 0 0 white

